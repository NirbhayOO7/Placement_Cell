<link rel="stylesheet" href="/css/students.css">
<h2 style="text-align: center;">Student page</h2>
<% if(locals.user){ %>
    <div id="new-student">
        <form action="/student/create" method="POST" id="student-form">
            <h3 style="color: #6d4af8c4; text-align: center;">Add Student</h3>
            <div id="flex-row-style">
                <div>
                    <label for="name">Enter name:</label>
                    <input type="text" id="name" name="name" required placeholder="Enter Student Name...">
                </div>
                <div>
                    <label for="batch">Enter batch:</label>
                    <input type="text" id="batch" name="batch" required placeholder="Enter Student Batch...">
                </div>
                <div>
                    <label for="college">Enter college:</label>
                    <input type="text" id="college" name="college" required placeholder="Enter Student College...">
                </div>
                <div>
                    <label for="status">Placed/Not Placed:</label>
                    <select name="status" id="status" form="student-form">
                        <option value="placed">Placed</option>
                        <option value="not_placed">Not Placed</option>
                    </select>
                </div>
                <div>
                    <label for="dsa">Enter DSA-Score:</label>
                    <input type="number" id="dsa" name="dsaScore" required placeholder="0-100">
                </div>
                <div>
                    <label for="webd">Enter WebDev-Score:</label>
                    <input type="number" id="webd" name="webDScore" required placeholder="0-100">
                </div>
                <div>
                    <label for="react">Enter React-Score:</label>
                    <input type="number" id="react" name="reactScore" required placeholder="0-100">
                </div>
            </div>
            <div style="margin-left: 42%;">
                <input type="submit" value="Submit" class="links">
            </div>
        </form>
    </div>
    <h3 style="color: #6d4af8c4; text-align: center;">Students List</h3>
    <div id="student-list">
        <% for(stud of students){ %>
        
            <div class="student">
                <div class="basic-details">
                    <h3><%= stud.name %></h3>
                    <p><b>ID:</b><%= stud.id %></p>
                    <p><b>Batch:</b><%= stud.batch %></p>
                    <p><b>College:</b><%= stud.college %></p>
                    <p><b>Status:</b><%= stud.status %></p>
                </div>
                <h3 style="color: #c91d1dc4; text-align: center; margin: 0px; background-color: rgb(130, 239, 239);">Scores</h3>
                <div class="scores">
                    <p><b>DSA:</b><%= stud.dsaScore %></p>
                    <p><b>Web Dev:</b><%= stud.webDScore %></p>
                    <p><b>React:</b><%= stud.reactScore %></p>
                </div>
            </div>            
        <%}%>
    </div>

<%}%>